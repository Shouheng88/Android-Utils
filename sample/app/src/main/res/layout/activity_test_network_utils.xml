<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".device.TestNetworkUtilsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv"
            android:background="@android:color/background_light"
            android:textSize="12sp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:text="Open Wireless Settings"
            android:onClick="openWirelessSettings"
            style="@style/MenuButton"/>

        <android.support.v7.widget.AppCompatButton
            android:text="Switch Mobile Data"
            android:onClick="setMobileDataEnabled"
            style="@style/MenuButton"/>

        <android.support.v7.widget.AppCompatButton
            android:text="Switch Wifi"
            android:onClick="setWifiEnabled"
            style="@style/MenuButton"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>